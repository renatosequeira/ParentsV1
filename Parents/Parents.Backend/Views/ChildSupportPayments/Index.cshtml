@model IEnumerable<Parents.Domain.ParentalManagement.Helpers.ChildSupportPayment>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.ChildSupportPaymentValue)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ChildSupportPaymentDate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ChildSupportPaymentRemarks)
        </th>
        <th>
            Image
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.ChildSupportPaymentValue)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ChildSupportPaymentDate)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ChildSupportPaymentRemarks)
        </td>
        <td>
            @if (!string.IsNullOrEmpty(item.ChildSupportPaymentImage))
            {
                <img src="@Url.Content(item.ChildSupportPaymentImage)" alt="Image" style="width:100px;height:150px;max-width: 100%; height: auto;" />
            }
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.ChildSupportPaymentId }) |
            @Html.ActionLink("Details", "Details", new { id=item.ChildSupportPaymentId }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.ChildSupportPaymentId })
        </td>
    </tr>
}

</table>

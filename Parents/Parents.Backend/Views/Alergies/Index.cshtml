@model IEnumerable<Parents.Domain.HealthManagement.Alergy>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.AlergyTypes.AlergyTypeDescriptiom)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.AlergyDescription)
        </th>
        <th>
            Image
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.AlergyTypes.AlergyTypeDescriptiom)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.AlergyDescription)
        </td>
        <td>
            @if (!string.IsNullOrEmpty(item.AlergyImage))
            {
                <img src="@Url.Content(item.AlergyImage)" alt="Image" style="width:100px;height:150px;max-width: 100%; height: auto;" />
            }
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.AlergyId }) |
            @Html.ActionLink("Details", "Details", new { id=item.AlergyId }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.AlergyId })
        </td>
    </tr>
}

</table>

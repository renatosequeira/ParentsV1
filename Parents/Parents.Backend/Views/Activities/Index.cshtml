        </th>
        <th>
            @Html.DisplayNameFor(model => model.ActivityDateStart)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ActivityDateEnd)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ActivityRemarks)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ActivityAddress)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Image)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.ActivityFamily.ActivityFamilyDescription)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ActivityInstitutionType.ActivityInstitutionTypeDescription)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ActivityPeriodicity.ActivityPeriodicityDescription)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ActivityType.ActivityTypeDescription)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ParentInCharge.ParentFirstName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ActivityDescription)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ActivityDateStart)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ActivityDateEnd)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ActivityRemarks)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ActivityAddress)
        </td>
        <td>
            @if (!string.IsNullOrEmpty(item.Image))
            {
                <img src="@Url.Content(item.Image)" alt="Image" style="width:100px;height:150px;max-width: 100%; height: auto;" />
            }
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.ActivityId }) |
            @Html.ActionLink("Details", "Details", new { id=item.ActivityId }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.ActivityId })
        </td>
    </tr>
}

</table>

@model IEnumerable<Parents.Domain.ActivitiesManagement.Activity>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.ActivityFamily.ActivityFamilyDescription)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ActivityInstitutionType.ActivityInstitutionTypeDescription)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ActivityPeriodicity.ActivityPeriodicityDescription)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ActivityType.ActivityTypeDescription)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ParentInCharge.ParentFirstName)

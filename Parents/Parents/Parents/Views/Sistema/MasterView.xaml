<?xml version="1.0" encoding="utf-8" ?>
<MasterDetailPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Parents.Views.Sistema.MasterView"
             xmlns:pages="clr-namespace:Parents.Views.Sistema"
                  xmlns:homePage="clr-namespace:Parents.Views">
    
    <MasterDetailPage.Master>
        <pages:MenuView/>
    </MasterDetailPage.Master>
    
    <MasterDetailPage.Detail>
        <NavigationPage 
            BarTextColor="White"
            BarBackgroundColor="{StaticResource MainColor}"
            x:Name="Navigator">
            <x:Arguments>
                <homePage:HomeView/>
            </x:Arguments>
        </NavigationPage>
    </MasterDetailPage.Detail>
</MasterDetailPage> 

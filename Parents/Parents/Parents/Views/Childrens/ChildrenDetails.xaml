<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Parents.Views.Childrens.ChildrenDetails"
             BindingContext="{Binding Main, Source={StaticResource Locator}}"
             Title="CHILDREN DETAILS">
    
    <Grid ColumnSpacing="0" RowSpacing="0">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="1"/>
            <RowDefinition Height="60"/>
        </Grid.RowDefinitions>
        <ContentView x:Name="PlaceHolder" Grid.Row="0"/>
        <BoxView BackgroundColor="#22395C" Grid.Row="1"/>

        <!--CHILDREN DETAILS-->

            <StackLayout 
                BindingContext="{Binding EditChildren}"
                Padding="10">

                <Label
                    Text="Children First Name:">

                </Label>

            <Entry
                    Placeholder="Enter children first name"
                    Text="{Binding ChildrenFirstName, Mode=TwoWay}">
            </Entry>

                <Label
                    Text="Children Last Name:">

                </Label>

            <Entry
                    Placeholder="Enter children last name"
                    Text="{Binding ChildrenLastName, Mode=TwoWay}">
            </Entry>

                <Label
                    Text="Children ID card:">

                </Label>

                <Entry
                    Placeholder="Enter children id card"
                    Text="{Binding ChildrenIdentityCard, Mode=TwoWay}">
                </Entry>


                <Label
                    Text="Children Sex:">

                </Label>


            <Entry
                    Placeholder="Enter children sex"
                    Text="{Binding ChildrenSex, Mode=TwoWay}">
            </Entry>

            <ActivityIndicator
                    IsRunning="{Binding IsRunning, Mode=TwoWay}"
                    VerticalOptions="CenterAndExpand">
            </ActivityIndicator>

                <Button
                    Command="{Binding SaveCommand}"
                    BackgroundColor="Navy"
                    BorderRadius="23"
                    FontAttributes="Bold"
                    HeightRequest="46"
                    IsEnabled="{Binding IsEnabled, Mode=TwoWay}"
                    Text="Save"
                    TextColor="White"
                    Margin="50,0"
                    VerticalOptions="EndAndExpand">

                </Button>

            </StackLayout>

        <!--BOTTOM MENU-->
        <Grid 
            ColumnSpacing="0" 
            RowSpacing="0" Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <StackLayout
                Spacing="0"
                Grid.Column="0"
                BackgroundColor="#7DBEA5">

                <Image 
                    HeightRequest="40"
                    Source="ic_format_list_bulleted"/>

                <Label 
                    Text="CHILDRENS" 
                    FontSize="10" 
                    HorizontalOptions="Center"
                    TextColor="#22395C"/>

                <StackLayout.GestureRecognizers>
                    <TapGestureRecognizer Command="{Binding BackCommand}"/>
                </StackLayout.GestureRecognizers>
            </StackLayout>

            <StackLayout
                Spacing="0"
                Grid.Column="1"
                BackgroundColor="#7DBEA5">

                <Image HeightRequest="40"
                    Source="ic_fitness_center"/>

                <Label 
                    Text="ACTIVITIES" 
                    FontSize="10" 
                    HorizontalOptions="Center"
                    TextColor="#22395C"/>

                <StackLayout.GestureRecognizers>
                    <TapGestureRecognizer Command="{Binding GoToActivitiesCommand}"/>
                </StackLayout.GestureRecognizers>
            </StackLayout>

            <StackLayout
                Spacing="0"
                Grid.Column="2"
                BackgroundColor="#7DBEA5">  

                <Image 
                    HeightRequest="40"
                    Source="ic_local_hospital"/>

                <Label 
                    Text="HEALTH" 
                    FontSize="10" 
                    HorizontalOptions="Center"
                    TextColor="#22395C"/>   

                <StackLayout.GestureRecognizers>
                    <TapGestureRecognizer Tapped="TapGestureRecognizer_Tapped_2" />
                </StackLayout.GestureRecognizers>
            </StackLayout>

            <StackLayout
                Spacing="0"
                Grid.Column="3"
                BackgroundColor="#7DBEA5">

                <Image 
                    HeightRequest="40"
                    Source="ic_accessibility_blue"/>

                <Label 
                    Text="PARENTAL" 
                    FontSize="10" 
                    HorizontalOptions="Center"
                    TextColor="#22395C"/>

                <StackLayout.GestureRecognizers>
                    <TapGestureRecognizer Tapped="TapGestureRecognizer_Tapped_3" />
                </StackLayout.GestureRecognizers>
            </StackLayout>

            <StackLayout
                Spacing="0"
                Grid.Column="4"
                BackgroundColor="#7DBEA5">

                <Image 
                    HeightRequest="40"
                    Source="ic_school_BLUE"/>

                <Label 
                    Text="SCHOOL" 
                    FontSize="10" 
                    HorizontalOptions="Center"
                    TextColor="#22395C"/>

                <StackLayout.GestureRecognizers>
                    <TapGestureRecognizer Tapped="TapGestureRecognizer_Tapped_3" />
                </StackLayout.GestureRecognizers>
            </StackLayout>

            <StackLayout
                Spacing="0"
                Grid.Column="5"
                BackgroundColor="#7DBEA5">

                <Image 
                    HeightRequest="40"
                    Source="ic_playlist_add_check"/>

                <Label 
                    Text="TASKS" 
                    FontSize="10" 
                    HorizontalOptions="Center"
                    TextColor="#22395C"/>

                <StackLayout.GestureRecognizers>
                    <TapGestureRecognizer Tapped="TapGestureRecognizer_Tapped_3" />
                </StackLayout.GestureRecognizers>
            </StackLayout>

        </Grid>

        <StackLayout
            VerticalOptions="End"
            HorizontalOptions="End">
            <Image 
                Source="child_boy"
                WidthRequest="100"/>
        </StackLayout>

    </Grid>

</ContentPage>
<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Parents.Views.Activities.ActivitiesListView"
             BindingContext="{Binding Main, Source={StaticResource Locator}}"
             xmlns:controls="clr-namespace:XLabs.Forms.Controls;assembly=XLabs.Forms"
             Title="{Binding Activities.ChildrenName}">

    <ContentPage.ToolbarItems>
        <ToolbarItem
            Order="Primary"
            Icon="ic_filter"
            Command="{Binding Activities.OpenFilterOptionsPageHelperCommand}"/>
    </ContentPage.ToolbarItems>

    <ScrollView>

        <Grid 
            ColumnSpacing="0" 
            RowSpacing="0" 
            Grid.Row="6">

            <StackLayout
                BindingContext="{Binding Activities}"
                Padding="5"
                Spacing="8"
                x:Name="contents"
                Orientation="Vertical">

                <SearchBar
                    Placeholder="Search..."
                    Text="{Binding Filter, Mode=TwoWay}"
                    SearchCommand="{Binding SearchCommand}"
                    HeightRequest="30">
                   
                </SearchBar>

                <ListView
                    IsRefreshing="{Binding IsRefreshing, Mode=TwoWay}"
                    ItemsSource="{Binding ActivitiesList}"
                    ItemSelected="ActivitiesList_ItemSelected"
                    IsPullToRefreshEnabled="True"
                    RefreshCommand="{Binding RefreshCommand}"
                    HasUnevenRows="True"
                    x:Name="ActivitiesList"
                    ItemTapped="ActivitiesList_ItemTapped">
                    <ListView.ItemTemplate>

                        <DataTemplate>
                            <ViewCell>

                                <ViewCell.ContextActions>
                                    <MenuItem
                                        Command="{Binding EditCommand}"
                                        Icon="ic_edit_white_border"
                                        Text="Edit"/>
                                    <MenuItem
                                        Command="{Binding DeleteCommand}"
                                        IsDestructive="True"
                                        Icon="ic_delete_red"
                                        Text="Delete"/>
                                </ViewCell.ContextActions>

                                <Frame
                                    HasShadow="True">

                                    <Grid
                                        VerticalOptions="Center">

                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>

                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="*"/>
                                        </Grid.RowDefinitions>

                                        <StackLayout
                                            Orientation="Vertical">

                                            <Label 
                                                Grid.Column="1" 
                                                HorizontalOptions="FillAndExpand" 
                                                FontSize="Medium" 
                                                Text="{Binding ActivityDescription}" 
                                                VerticalOptions="Center"
                                                FontAttributes="Bold">
                                            </Label>

                                            <Label
                                            Grid.Column="1"
                                            HorizontalOptions="FillAndExpand"
                                            FontSize="Small"
                                            Text="{Binding convertedDate}"
                                            VerticalOptions="Center"
                                            TextColor="{Binding EndDateColor}">

                                            </Label>
                                        </StackLayout>

                                        <Image
                                            Grid.Column="2"
                                            HorizontalOptions="End" 
                                            Source="ic_eye_brown"
                                            VerticalOptions="Center"
                                            HeightRequest="40">
                                            <Image.GestureRecognizers>
                                                <TapGestureRecognizer Command="{Binding ActivitiesViewModel.RefreshCommand}"/>
                                                <TapGestureRecognizer Command="{Binding SelectActivityCommand}"/>
                                            </Image.GestureRecognizers>
                                        </Image>

                                    </Grid>
                                </Frame>



                            </ViewCell>

                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>

            </StackLayout>

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!--FLOAT BUTTON-->
            <StackLayout
            VerticalOptions="End"
            HorizontalOptions="End"
            WidthRequest="200"
            MinimumWidthRequest="200">

                <StackLayout
                Padding="0"
                Grid.Row="0">

                    <!--BOTÕES DE MENU ESCONDIDOS-->
                    <Label
                    x:Name="menuLabel"
                    IsVisible="False"
                    Text="ACTIVITY"
                    BackgroundColor="DarkGray"
                    TextColor="White"
                    HorizontalTextAlignment="Center"
                    FontAttributes="Bold"
                    FontSize="Large"
                    Opacity="0"/>

                    <Button 
                    x:Name="btnAddAnniversary"
                    Image="anniversary_orange"
                    Clicked="btnAddAnniversary_Clicked"
                    BackgroundColor="Transparent"
                    IsVisible="False"
                    Text="ANNIVERSARY"
                    FontAttributes="Bold"
                    TextColor="DarkGray"
                    Opacity="0"/>

                    <Button 
                    x:Name="btnAddEvent"
                    Image="event_orange"
                    Clicked="btnAddEvent_Clicked"
                    BackgroundColor="Transparent"
                    IsVisible="False"
                    Text="EVENT"
                    FontAttributes="Bold"
                    TextColor="DarkGray"
                    Opacity="0"/>

                    <Button 
                    x:Name="btnAddSchoolActivity"
                    Image="school_activities_orange"
                    Clicked="btnAddSchoolActivity_Clicked"
                    BackgroundColor="Transparent"
                    IsVisible="False"
                    Text="SCHOOL"
                    FontAttributes="Bold"
                    TextColor="DarkGray"
                    Opacity="0"/>

                    <Button 
                    x:Name="btnAddSportActivity"
                    Image="soccer_player_orange"
                    Clicked="btnAddSportActivity_Clicked"
                    BackgroundColor="Transparent"
                    IsVisible="False"
                    Text="SPORTS"
                    FontAttributes="Bold"
                    TextColor="DarkGray"
                    Opacity="0"/>


                    <Button 
                    x:Name="btnOtherActvity"
                    Image="other_activity_orange"
                    Clicked="btnOtherActvity_Clicked"
                    BackgroundColor="Transparent"
                    IsVisible="False"
                    Text="OTHER"
                    FontAttributes="Bold"
                    TextColor="DarkGray"
                    Opacity="0"/>

                </StackLayout>

                <!--BOTÃO DE MENU-->
                <StackLayout
                Padding="5"
                Grid.Row="1">
                    <Button 
                    x:Name="buttonAdd"
                    Image="add_closed_orange"
                    Clicked="buttonAdd_Clicked"
                    BackgroundColor="Transparent"
                    HorizontalOptions="EndAndExpand"/>
                </StackLayout>
            </StackLayout>
            <!--FLOAT BUTTON END-->

        </Grid>
    </ScrollView>

</ContentPage>
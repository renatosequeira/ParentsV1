<?xml version="1.0" encoding="utf-8" ?>
<pages:PopupPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Parents.Views.Activities.HelpersPages.ActivityImageClickedHelperPage"
             xmlns:pages="clr-namespace:Rg.Plugins.Popup.Pages;assembly=Rg.Plugins.Popup"
             xmlns:animations="clr-namespace:Parents.Animations;assembly=Parents"
                 xmlns:anim="clr-namespace:Rg.Plugins.Popup.Animations;assembly=Rg.Plugins.Popup">

    <StackLayout 
        VerticalOptions="Center" 
        HorizontalOptions="FillAndExpand"
        Padding="20,20,20,20">

        <StackLayout BackgroundColor="White">
            <ListView x:Name="listViewOptions">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <TextCell TextColor="Black" Text="{Binding .}"></TextCell>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </StackLayout>
        <Button Text="Close" TextColor="#A9D1DE" Clicked="OnClose"></Button>
    </StackLayout>

</pages:PopupPage>
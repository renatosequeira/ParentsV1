<?xml version="1.0" encoding="utf-8" ?>
<TabbedPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Parents.Views.Activities.ActivitiesView"
            xmlns:local="clr-namespace:Parents.Views.Activities"
            BindingContext="{Binding Main, Source={StaticResource Locator}}"
             Title="ACTIVITIES"
            xmlns:renderer="clr-namespace:Parents;assembly=Parents">

    <TabbedPage.Children>
        <local:ActivitiesListView Title="LIST" Icon="ic_format_list_bulleted_white"/>
        <local:AnniversariesListView Title="ANNIVERSARIES" Icon="ic_cake"/>
        <local:EventsListView Title="EVENTS" Icon="ic_movie_filter"/>
        <local:SchoolActivitiesListView Title="SCHOOL" Icon="ic_school"/>
        <local:SportsActivitiesListView Title="SPORTS" Icon="ic_pool"/>
        <local:OtherActivitiesView Title="OTHERS" Icon="ic_chat_bubble_outline"/>
    </TabbedPage.Children>

</TabbedPage>